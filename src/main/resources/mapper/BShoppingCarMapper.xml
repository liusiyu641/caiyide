<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caiyide.primary.mapper.BShoppingCarMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        car_id AS carId, user_id AS userId, product_sum AS productSum, product_id AS productId, car_type AS carType, createtime
    </sql>

    <select id="getById" resultType="com.caiyide.primary.entity.BShoppingCar">
        select <include refid="Base_Column_List"/> from b_shopping_car where car_id = #{id}
    </select>

    <select id="getPageList" resultType="com.caiyide.primary.entity.BShoppingCar">
        select <include refid="Base_Column_List"/> from b_shopping_car
    </select>

</mapper>
